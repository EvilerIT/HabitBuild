<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_navi"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f8f8f8">

    <TextView
        android:id="@+id/text_navi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <ImageButton
        android:id="@+id/btn_navi_back"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#00ffffff"
        android:paddingRight="30dp"
        android:src="@drawable/btn_back_black"/>

    <ImageButton
        android:id="@+id/btn_navi_search"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/share"
        android:background="#00ffffff"
        android:paddingLeft="3dp"
        android:src="@drawable/btn_back_black"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/btn_back_black"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

</RelativeLayout>
